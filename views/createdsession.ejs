<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="csrf-token" content="<%= csrfToken %>" />
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="/css/styles.css" />
    <title>Sports Scheduler</title>
    <script>
      var token = document
          .querySelector('meta[name="csrf-token"]')
          .getAttribute("content")
          
      function deletePlayer(id) {
          fetch(`/player/${id}`, {
              method: "delete",
              headers: { "Content-Type": "application/json" },
              body: JSON.stringify({
                  "_csrf": token
              })
          })
              .then((res) => {
                  if (res.ok) {
                      window.location.reload()
                  }
              })
              .catch((err) => console.error(err))
      }

      function joinSession(id) {
            fetch(`/joinsession/${id}`, {
                method: "post",
                headers: { "Content-Type": "application/json" },
                body: JSON.stringify({
                    "_csrf": token
                })
            })
                .then((res) => {
                    if (res.ok) {
                        window.location.reload()
                    }
                })
                .catch((err) => console.error(err))
        }

        function leaveSession(id) {
            fetch(`/leavesession/${id}`, {
                method: "post",
                headers: { "Content-Type": "application/json" },
                body: JSON.stringify({
                    "_csrf": token
                })
            })
                .then((res) => {
                    if (res.ok) {
                        window.location.reload()
                    }
                })
                .catch((err) => console.error(err))
        }
      </script>
</head>

<body class="bg-stone-300 text-white">
  <div>
    <%- include('header') %>
  </div>
       <a href="/sessionpage/<%=session.sportname%>" class="text-red-900 text-sm px-2 py-1 absolute top-2 left-2">Back</a>
        <a href="/signout" class="text-red-900 text-sm px-2 py-1 absolute top-2 right-2">Signout</a>
  <div class="container mx-auto p-8">
    <div class="bg-sky-900 rounded-lg shadow-lg p-6">
      <h1 class="text-2xl font-bold mb-4">Session Details</h1>

      <div class="grid grid-cols-2 gap-4">
        <div>
          <h2 class="text-lg font-semibold mb-2">Sport</h2>
          <p class="text-gray-300"><%= sport.name %></p>
        </div>

        <div>
          <h2 class="text-lg font-semibold mb-2">Date</h2>
          <p class="text-gray-300"><%= session.time %></p>
        </div>

        <div>
          <h2 class="text-lg font-semibold mb-2">Venue</h2>
          <p class="text-gray-300"><%= session.address %></p>
        </div>
        <div>
          <h2 class="text-lg font-semibold mb-2">Available slots</h2>
          <p class="text-gray-300"><%= session.playerscount - players.length %></p>
        </div>

        <div>
            <h2 class="text-lg font-semibold mb-2">Players</h2>
            <div class="grid grid-cols-5 gap-4">
            <% if(session.userId == userdetils.id) { %>
                <% for(var i = 0; i < players.length; i++) { %>
                <div class="Sport-Item flex items-center">
                    <div class="flex items-center bg-gray-900 p-2 rounded">
                    <p class="mb-3 font-normal text-gray-700 dark:text-gray-400"><%= players[i].username %></p>
                    <a class="trash-icon ml-2"  href="#" onclick="deletePlayer(<%=players[i].id%>)">
                        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M9.75 9.75l4.5 4.5m0-4.5l-4.5 4.5M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                        </svg>
                    </a>
                    </div>
                </div>
                <% if((i + 1) % 5 === 0) { %>
                    <div class="col-span-5"></div>
                <% } %>
                <% } %>
                <% } %>
           

                <% if(session.userId != userdetils.id) { %>
                    <% for(var i = 0; i < players.length; i++) { %>
                    <div class="Sport-Item flex items-center">
                        <div class="flex items-center bg-gray-900 p-1 rounded">
                           <p class="mb-3 p-2 font-normal text-gray-700 dark:text-gray-400"><%= players[i].username %></p>
                        </div>
                    </div>
                    <% if((i + 1) % 5 === 0) { %>
                        <div class="col-span-5"></div>
                    <% } %>
                    <% } %>
                    <% } %>
           </div>
          </ul>
        </div>
      </div>
    </div>
    <div class="editcancle mt-3">
    <%if (session.userId === userdetils.id){%>
          <a href="editSession/<%=session.id%>"><svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6 text-sky-900">
            <path stroke-linecap="round" stroke-linejoin="round" d="M16.862 4.487l1.687-1.688a1.875 1.875 0 112.652 2.652L10.582 16.07a4.5 4.5 0 01-1.897 1.13L6 18l.8-2.685a4.5 4.5 0 011.13-1.897l8.932-8.931zm0 0L19.5 7.125M18 14v4.75A2.25 2.25 0 0115.75 21H5.25A2.25 2.25 0 013 18.75V8.25A2.25 2.25 0 015.25 6H10" />
          </svg>
          <p class="text-sky-900">Edit Session</p>
            </a>
          <a href="cancelsession/<%=session.id%>" ><svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6 text-sky-900">
            <path stroke-linecap="round" stroke-linejoin="round" d="M12 9v3.75m-9.303 3.376c-.866 1.5.217 3.374 1.948 3.374h14.71c1.73 0 2.813-1.874 1.948-3.374L13.949 3.378c-.866-1.5-3.032-1.5-3.898 0L2.697 16.126zM12 15.75h.007v.008H12v-.008z" />
          </svg>
          <p class="text-sky-900">Cancel Session</p>
            </a>
        <%}%>  
    <% flag = false %>    
    <% for(let i=0;i<players.length;i++) { %>
        <%  if(players[i].userId == userdetils.id ) { %>
           <% flag = true %>
          <% } %>
     <% } %>
     <%  if(!flag) { %>
        <a href="#" onclick="joinSession(<%=session.id%>)" ><svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6 text-sky-900">
          <path stroke-linecap="round" stroke-linejoin="round" d="M12 9v6m3-3H9m12 0a9 9 0 11-18 0 9 9 0 0118 0z" />
        </svg> 
        <p class="text-sky-900">Join Session</p>
         </a>
         <% } %>
      <% if(flag) { %> 
        <a href="#" onclick="leaveSession(<%=session.id%>)"  ><svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6 text-sky-900">
          <path stroke-linecap="round" stroke-linejoin="round" d="M15.75 9V5.25A2.25 2.25 0 0013.5 3h-6a2.25 2.25 0 00-2.25 2.25v13.5A2.25 2.25 0 007.5 21h6a2.25 2.25 0 002.25-2.25V15M12 9l-3 3m0 0l3 3m-3-3h12.75" />
        </svg>         
        <p class="text-sky-900">Leave Session</p>
         </a> 
         <% } %> 
      </div>
      
  </div>
</body>
</html>
 